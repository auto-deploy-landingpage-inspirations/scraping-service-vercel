{
  "version": 2,
  "builds": [
    { "src": "app/public/*", "use": "@now/static" },
    { "src": "app/controllers/api/dom.js", "use": "@now/node", "config": { "maxLambdaSize": "40mb" } },
    { "src": "app/controllers/api/image.js", "use": "@now/node", "config": { "maxLambdaSize": "40mb" } },
    { "src": "app/controllers/api/meta.js", "use": "@now/node", "config": { "maxLambdaSize": "40mb" } },
    { "src": "app/controllers/api/page.js", "use": "@now/node", "config": { "maxLambdaSize": "40mb" } }
  ],
  "routes": [
    { "src": "/", "dest": "/app/public/index.html" },
    { "src": "/favicon.ico", "dest": "/app/public/favicon.ico" },
    { "src": "/api/dom?", "dest": "/app/controllers/api/dom.js" },
    { "src": "/api/scrape?", "dest": "/app/controllers/api/dom.js" },
    { "src": "/api/image?", "dest": "/app/controllers/api/image.js" },
    { "src": "/api/meta?", "dest": "/app/controllers/api/meta.js" },
    { "src": "/api/page?", "dest": "/app/controllers/api/page.js" }
  ],
  "env": {
    "NODE_ENV": "production",
    "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "true"
  }
}